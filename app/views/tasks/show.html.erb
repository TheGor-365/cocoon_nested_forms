<p style="color: green"><%= notice %></p>

<%= render @task %>

<div class="btn-group">
  <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-sm btn-outline-warning" %>
  <%= link_to "Back to tasks", tasks_path, class: "btn btn-sm btn-outline-secondary" %>
  <%= button_to "Destroy this task", @task, method: :delete, class: "btn btn-sm btn-outline-danger" %>
</div>
