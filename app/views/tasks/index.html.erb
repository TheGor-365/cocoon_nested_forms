<p style="color: green">
  <%= notice %>
</p>

<h1 class="text-muted">
  Tasks
</h1>

<% @tasks.each do |task| %>
  <div class="card shadow p-5 my-5">
    <%= render task %>
    <p><%= link_to "Show this task", task, class: 'btn btn-sm btn-outline-primary' %></p>
  </div>
<% end %>

<%= link_to "New task", new_task_path, class: 'btn btn-sm btn-outline-primary' %>
